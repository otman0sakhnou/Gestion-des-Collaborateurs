@model Gestion_des_Collaborateurs.Models.Certification

@{
    ViewData["Title"] = "Edit";
}


<h1 style="color:black;">Modifier</h1>


<h4>Certification</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdCertification" />
            <div class="form-group">
                <label asp-for="NomCertification" class="control-label"></label>
                <input asp-for="NomCertification" class="form-control" />
                <span asp-validation-for="NomCertification" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Durée" class="control-label"></label>
                <input asp-for="Durée" class="form-control" />
                <span asp-validation-for="Durée" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Coût" class="control-label"></label>
                <input asp-for="Coût" class="form-control" />
                <span asp-validation-for="Coût" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Garder" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

