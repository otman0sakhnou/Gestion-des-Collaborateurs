@model Gestion_des_Collaborateurs.Models.Certification

@{
    ViewData["Title"] = "Edit";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nouveau Collaborateur</title>
    <link href="~/template/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .label-container {
            display: flex;
            align-items: center;
        }

            .label-container label {
                white-space: nowrap;
            }
    </style>
</head>
<body>

    <h1 style="color:#485785;">Modifier</h1>

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="IdCertification" />
                <div class="form-group">
                    <table>
                        <tr>
                            <td>
                                <div class="label-container">
                                    <label asp-for="IdCertification" class="control-label">L'id de la certification</label>
                                </div>
                            </td>
                            <td style="padding-right: 70px;"></td>
                            <td>
                                <div class="label-container">
                                    <label asp-for="NomCertification" class="control-label">Nom de la certification</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input style="width:243px;" asp-for="IdCertification" class="form-control" />
                                <span asp-validation-for="IdCertification" class="text-danger"></span>
                            </td>
                            <td style="padding-right: 70px;"></td>
                            <td>
                                <input style="width:243px;" asp-for="NomCertification" class="form-control" />
                                <span asp-validation-for="NomCertification" class="text-danger"></span>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="form-group">
                    <table>
                        <tr>
                            <td>
                                <div class="label-container">
                                    <label asp-for="Durée" class="control-label"></label>
                                </div>
                            </td>
                            <td style="padding-right:70px;"></td>
                            <td>
                                <div class="label-container">
                                    <label asp-for="Coût" class="control-label"></label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input style="width:243px;" asp-for="Durée" class="form-control" />
                                <span asp-validation-for="Durée" class="text-danger"></span>
                            </td>
                            <td style="padding-right:70px;"></td>
                            <td>
                                <input style="width:243px;" asp-for="Coût" class="form-control" />
                                <span asp-validation-for="Coût" class="text-danger"></span>
                            </td>
                        </tr>
                    </table>
                </div>

                <br />
                <div class="form-group">
                    <a class="btn btn-primary" asp-action="Create" asp-route-id="@Model?.IdCertification">Ajouter</a>
                    <a class="style-back-liste" style="text-decoration:none" asp-controller="Certifications" asp-action="Index">
                        <span class="material-icons-outlined">
                            arrow_back_ios_new
                        </span>Revenir à la liste
                    </a>
                </div>
            </form>
        </div>
    </div>




</body>
</html>
