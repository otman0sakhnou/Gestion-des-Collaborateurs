@model Gestion_des_Collaborateurs.Models.Certification

@{
    ViewData["Title"] = "Details";
}
<link href="~/template/bootstrap.css" rel="stylesheet" />
<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

<h1>Details</h1>

<div>
    <h4>Collaborateur</h4>
    <hr />
    <dl class="row">

        <dt class="col-sm-2">
            Nom de la certification
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.NomCertification)
        </dd>
        <dt class="col-sm-2">
            Durée
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Durée)
        </dd>
        <dt class="col-sm-2">
            Coût
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Coût)
        </dd>
    </dl>
</div>
<div>
    <a  class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.IdCertification">Modifier</a> 
    <a class="style-back-liste" asp-controller="Certifications" asp-action="Index">
        <span class="material-icons-outlined">
            arrow_back_ios_new
        </span>Revenir à la Liste
    </a>
</div>


