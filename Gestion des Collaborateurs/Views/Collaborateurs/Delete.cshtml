@model Gestion_des_Collaborateurs.Models.Collaborateur

@{
    ViewData["Title"] = "Delete";
}

    <link href="~/template/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <h1 style="color:#485785">Supprimer</h1>

    <h6 style="color:red;">Est ce que vous êtes sûre que vous voulez supprimer cet enregistrement?</h6>
    <div>

        <hr />

         <dl class="row">

        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Nom)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Nom)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Prenom)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Prenom)
        </dd>
        <dt class="col-sm-2">
        Date de Naissance
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model=>model.DateNaissance)
        </dd>
        <dt class = "col-sm-2">
        Date d'Embauche
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.DateEmbauche)
        </dd>
        <dt class = "col-sm-2">
        @Html.DisplayNameFor(model => model.Anciennete)
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.Anciennete)
        </dd>
        <dt class = "col-sm-2">
        Date Debut d'Essai
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.DateDebutEssai)
        </dd>
        <dt class = "col-sm-2">
        Date Fin d'Essai
        </dt>
        <dd class = "col-sm-10">
        @Html.DisplayFor(model => model.DateFinEssai)
        </dd>
        <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.salaire)
        </dt>
        <dd class="col-sm-10">
        @Html.DisplayFor(model => model.salaire)
        </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCollaborateur" />
            <input style="margin-right:10px;" type="submit" value="Supprimer" class="btn btn-danger" />
            <a class="style-back-liste" asp-controller="Collaborateurs" asp-action="Index">
                <span class="material-icons-outlined">
                    arrow_back_ios_new
                </span>Revenir à la Liste
            </a>
        </form>
    </div>





















