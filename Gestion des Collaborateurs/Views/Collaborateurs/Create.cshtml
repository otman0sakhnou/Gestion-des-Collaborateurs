@model Gestion_des_Collaborateurs.Models.Collaborateur

@{
    ViewData["Title"] = "Create";
}


<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nouveau Collaborateur</title>
    <link href="~/template/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .label-container {
            display: flex;
            align-items: center;
        }

            .label-container label {
                white-space: nowrap;
            }
    </style>
</head>
<body>

   <div class="row">
        <h1 style="color:#485785;">Ajouter un collaborateur</h1>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group">
                        <table>
                            <tr>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="Nom" class="control-label">Nom</label>
                                    </div>
                                </td>
                                <td style="padding-right:70px;"></td>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="Prenom" class="control-label">Prénom</label>
                                    </div>
                                </td>
                            </tr>

                            <tr>
                                <td>
                                    <input style="width:188px;" asp-for="Nom" class="form-control" />
                                    <span asp-validation-for="Nom" class="text-danger"></span>
                                </td>
                                <td style="padding-right:70px;"></td>
                                <td>
                                    <input style="width:188px;" asp-for="Prenom" class="form-control" />
                                    <span asp-validation-for="Prenom" class="text-danger"></span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <br />
                    <div class="form-group">
                        <table>
                            <tr>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="DateEmbauche" class="control-label">Date d'embauche</label>
                                    </div>
                                </td>
                                <td style="padding-right:70px;"></td>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="Anciennete" class="control-label">Ancienneté</label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input asp-for="DateEmbauche" type="date" class="form-control" />
                                    <span asp-validation-for="DateEmbauche" class="text-danger"></span>
                                </td>
                                <td style="padding-right:70px;"></td>

                                <td>
                                    <input style="width:188px;" asp-for="Anciennete" class="form-control" />
                                    <span asp-validation-for="Anciennete" class="text-danger"></span>
                                </td>
                                <td style="padding-right:110px;"></td>

                            </tr>
                        </table>
                    </div>
                    <br />
                    <div class="form-group">
                        <table>
                            <tr>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="DateDebutEssai" class="control-label">Date de début d'essai</label>
                                    </div>
                                </td>
                                <td style="padding-right:70px;"></td>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="DateFinEssai" class="control-label">Date de fin d'essai</label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="date" asp-for="DateDebutEssai" class="form-control" />
                                    <span asp-validation-for="DateDebutEssai" class="text-danger"></span>
                                </td>
                                <td style="padding-right:70px;"></td>

                                <td>
                                    <input type="date" asp-for="DateFinEssai" class="form-control" />
                                    <span asp-validation-for="DateFinEssai" class="text-danger"></span>
                                </td>
                                
                            </tr>
                        </table>
                    </div>
                    <br />
                    <div class="form-group">
                        <table>
                            <tr>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="DateNaissance" class="control-label">Date de naissance</label>
                                    </div>
                                </td>
                                <td style="padding-right:70px;"></td>
                                <td>
                                    <div class="label-container">
                                        <label asp-for="salaire" class="control-label">Salaire</label>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <td>
                                    <input type="date" asp-for="DateNaissance" class="form-control" />
                                    <span asp-validation-for="DateNaissance" class="text-danger"></span>
                                </td>
                                <td style="padding-right:70px;"></td>
                                <td>
                                    <input style="width:188px;" asp-for="salaire" class="form-control" />
                                    <span asp-validation-for="DateFinEssai" class="text-danger"></span>
                                </td>
                            </tr>
                        </table>
                    </div>

                    <br />
                    <div class="form-group">
                        <input type="submit" value="Ajouter" class="btn btn" />
                        <a class="style-back-liste" style="margin-left:10px;" asp-area="" asp-controller="Collaborateurs" asp-action="Index">
                            <i class="bi bi-box-arrow-left"></i>
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-box-arrow-left" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M6 12.5a.5.5 0 0 0 .5.5h8a.5.5 0 0 0 .5-.5v-9a.5.5 0 0 0-.5-.5h-8a.5.5 0 0 0-.5.5v2a.5.5 0 0 1-1 0v-2A1.5 1.5 0 0 1 6.5 2h8A1.5 1.5 0 0 1 16 3.5v9a1.5 1.5 0 0 1-1.5 1.5h-8A1.5 1.5 0 0 1 5 12.5v-2a.5.5 0 0 1 1 0v2z" />
                                <path fill-rule="evenodd" d="M.146 8.354a.5.5 0 0 1 0-.708l3-3a.5.5 0 1 1 .708.708L1.707 7.5H10.5a.5.5 0 0 1 0 1H1.707l2.147 2.146a.5.5 0 0 1-.708.708l-3-3z" />
                            </svg> Accéder à la liste
                        </a>
                    </div>
                </form>

            </div>
        </div>
   </div>
</body>
</html>





@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}















