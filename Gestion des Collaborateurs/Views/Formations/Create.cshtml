@model Gestion_des_Collaborateurs.Models.Formation

@{
    ViewData["Title"] = "Create";
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>nouveau Collaborateur</title>
    <link href="~/template/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <style>
        .label-container {
            display: flex;
            align-items: center;
        }

            .label-container label {
                white-space: nowrap;
            }
    </style>
</head>
<body>
    <h1 style="color:#485785;">Ajouter une formation</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <table>
                        <tr>
                            <td>
                                <div class="label-container">
                                    <label asp-for="IdFormation" class="control-label">L'id de la formation</label>
                                </div>
                            </td>
                            <td style="padding-right: 70px;"></td>
                            <td>
                                <div class="label-container">
                                    <label asp-for="NomFormation" class="control-label">Nom de la formation</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input style="width:243px;" asp-for="IdFormation" class="form-control" />
                                <span asp-validation-for="IdFormation" class="text-danger"></span>
                            </td>
                            <td style="padding-right: 70px;"></td>
                            <td>
                                <input style="width:243px;" asp-for="NomFormation" class="form-control" />
                                <span asp-validation-for="NomFormation" class="text-danger"></span>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="form-group">
                    <table>
                        <tr>
                            <td>
                                <div class="label-container">
                                    <label asp-for="DateDebutFormation" class="control-label">Date de début de la formation</label>
                                </div>
                            </td>
                            <td style="padding-right: 70px;"></td>
                            <td>
                                <div class="label-container">
                                    <label asp-for="DateFinFormation" class="control-label">Date de fin de la formation</label>
                                </div>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <input style="width:243px;" asp-for="DateDebutFormation" type="date" class="form-control" />
                                <span asp-validation-for="DateDebutFormation" class="text-danger"></span>
                            </td>
                            <td style="padding-right: 70px;"></td>
                            <td>
                                <input style="width:243px;" asp-for="DateFinFormation" type="date" class="form-control" />
                                <span asp-validation-for="DateFinFormation" class="text-danger"></span>
                            </td>
                        </tr>
                    </table>
                </div>
                <br />
                <div class="form-group">

                    <input type="submit" value="Ajouter" class="btn btn" />
                    <a class="style-back-liste" asp-controller="Formations" asp-action="Index">
                        <span class="material-icons-outlined">
                            arrow_back_ios_new
                        </span>Revenir à l'aceuil
                    </a>

                </div>
            </form>
        </div>
    </div>
</body>
</html>
