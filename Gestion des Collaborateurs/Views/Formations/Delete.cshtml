@model Gestion_des_Collaborateurs.Models.Formation

@{
    ViewData["Title"] = "Delete";
}
    <link href="~/template/bootstrap.css" rel="stylesheet" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />

    <h1 style="color:#485785">Supprimer</h1>

    <h6 style="color:red;">Est ce que vous êtes sûre que vous voulez supprimer cet enregistrement?</h6>

    <div>
        <h4 style="color:#485785">Formation</h4>


        <hr />

        <dl class="row">
            <dt class="col-sm-2">
                Nom de la formation
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.NomFormation)
            </dd>
            <dt class="col-sm-2">
                Date de début
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateDebutFormation)
            </dd>
            <dt class="col-sm-2">
                Date de fin de
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DateFinFormation)
            </dd>
        </dl>
    </div>
        <br />
        <div>
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdFormation" />
            <input style="margin-right:10px;" type="submit" value="Supprimer" class="btn btn-danger" />
            <a class="style-back-liste" asp-controller="Formations" asp-action="Index">
                <span class="material-icons-outlined">
                    arrow_back_ios_new
                </span>Revenir à la Liste
            </a>
        </form>
    </div>
